{
  "name": "vt-style",
  "version": "0.0.4",
  "description": "VT Style is a YAML to JSON conversion tool with a special focus on Mapbox GL style.",
  "main": "dist/index.js",
  "bin": "dist/cli.js",
  "scripts": {
    "test": "jest",
    "start": "webpack serve",
    "watch": "ts-node src/cli.ts ./public/style.yml -o ./public/style.json -w",
    "build": "npm run build:lib",
    "build:lib": "rimraf dist && tsc",
    "build:docs": "rimraf docs && mkdir -p ./docs && webpack"
  },
  "author": "Geolonia (https://geolonia.com)",
  "license": "MIT",
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  },
  "dependencies": {
    "chalk": "^4.1.1",
    "chokidar": "^3.5.2",
    "js-yaml": "^4.1.0",
    "meow": "9"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/js-yaml": "^4.0.2",
    "@types/node": "^14.0.14",
    "copy-webpack-plugin": "^9.0.1",
    "jest": "^27.0.6",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5",
    "webpack": "^5.42.1",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2"
  }
}
